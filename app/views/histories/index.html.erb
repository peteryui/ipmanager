<table class="table table-bordered">

  <thead>
    <tr>
      <th width="100">IP位址</th>
      <th>使用類別</th>
      <th width="80">使用者</th>
      <th width="80">分機</th>
      <th width="150">MAC位址</th>
      <th width="80">網路孔</th>
      <th>備註說明</th>
      <th>更新日期</th>
    </tr>
  </thead>

  <tbody>
    <% @histories.each do |record| %>
      <tr>
        <td>
           <%= record.ip %>
        </td>

        <td>
          <%= record.category %>
        </td>

        <td>
          <%= record.user_name %>
        </td>

        <td>
          <%= record.phone_number %>
        </td>

        <td>
          <%= record.mac_address %>
        </td>

        <td>
          <%= record.location %>
        </td>

        <td>
          <%= record.description %>
        </td>

        <td>
          <%= record.updated_on %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>

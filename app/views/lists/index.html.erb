<table class="table table-bordered">

  <thead>
    <tr>
      <th width="100">IP位址</th>
      <th width="100">使用類別</th>
      <th width="100">使用者</th>
      <th width="80">分機</th>
      <th width="150">MAC位址</th>
      <th width="80">網路孔</th>
      <th>備註說明</th>
      <th width="100">最後編輯</th>
      <th width="100">來源IP</th>
      <th width="50">動作</th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |record| %>
      <tr>
        <td>
           <%= record.ip %>
        </td>

        <td>
          <%= record.category %>
        </td>

        <td>
          <%= record.user_name %>
        </td>

        <td>
          <%= record.phone_number %>
        </td>

        <td>
          <%= record.mac_address %>
        </td>

        <td>
          <%= record.location %>
        </td>

        <td>
          <%= record.description %>
        </td>

        <td>
          <%= record.user.name %>
        </td>

        <td>
          <%= record.user_ip %>
        </td>

        <td>
          <%= link_to("編輯", edit_list_path(record), :class => "btn btn-primary btn-sm") %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>
